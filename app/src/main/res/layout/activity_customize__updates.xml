<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">


        <TextView android:text="My Planner" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/Title"
            android:textSize="32sp"
            android:background="#FF0000"
            android:textColor="#FFFFFF"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:onClick="gotoHome"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/logoutButton"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/power"
            android:scaleType="fitCenter"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:onClick="onLogoutClick"
            android:background="@android:color/transparent"

            />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/gear"
            android:scaleType="fitCenter"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="300dp"
            android:background="@android:color/transparent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customize Updates"
            android:textColor="#000000"
            android:textSize="25sp"
            android:id="@+id/welcome"
            android:layout_below="@+id/Title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adjust your updates preferences"
            android:textSize="15dp"
            android:id="@+id/Adjustcourses"
            android:layout_below="@+id/welcome"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#2C3539"
            />


        <TextView android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="My Pack"
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:id="@+id/MyPack"
            android:textSize="20dp"
            android:onClick="onMyPackClick"
            android:clickable="true"
            android:layout_below="@+id/Adjustcourses"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="35dp"
            android:elevation="10dp"
            android:background="@drawable/my_border"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses:"
            android:textColor="#000000"
            android:textSize="30dp"
            android:id="@+id/courses"
            android:layout_below="@+id/MyPack"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            />

        <TextView android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Human Computer Interaction"
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:id="@+id/HCITextView"
            android:textSize="20dp"
            android:onClick="onCourseCustomizeClick"
            android:clickable="true"
            android:layout_below="@+id/courses"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:elevation="10dp"
            android:background="@drawable/my_border"
            android:paddingLeft="10dp"/>

        <TextView android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Operating Systems"
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:id="@+id/OSTextView"
            android:textSize="20dp"
            android:onClick="onCourseCustomizeClick"
            android:clickable="true"
            android:layout_below="@+id/HCITextView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:elevation="10dp"
            android:background="@drawable/my_border"
            android:paddingLeft="10dp"/>

        <TextView android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Software Engineering"
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:id="@+id/SETextView"
            android:textSize="20dp"
            android:onClick="onCourseCustomizeClick"
            android:clickable="true"
            android:layout_below="@+id/OSTextView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:elevation="10dp"
            android:background="@drawable/my_border"
            android:paddingLeft="10dp"/>

        <TextView android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Internet Protocols"
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:id="@+id/IPTextView"
            android:textSize="20dp"
            android:onClick="onCourseCustomizeClick"
            android:clickable="true"
            android:layout_below="@+id/SETextView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:elevation="10dp"
            android:background="@drawable/my_border"
            android:paddingLeft="10dp"/>

        <TextView android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Artificial Intelligence"
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:id="@+id/AITextView"
            android:textSize="20dp"
            android:onClick="onCourseCustomizeClick"
            android:clickable="true"
            android:layout_below="@+id/IPTextView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:elevation="10dp"
            android:background="@drawable/my_border"
            android:paddingLeft="10dp"/>

        <TextView android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Cloud Computing"
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:id="@+id/CCTextView"
            android:textSize="20dp"
            android:onClick="onCourseCustomizeClick"
            android:clickable="true"
            android:layout_below="@+id/AITextView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:elevation="10dp"
            android:background="@drawable/my_border"
            android:paddingLeft="10dp"/>

        <TextView android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Advanced Algorithms"
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:id="@+id/AATextView"
            android:textSize="20dp"
            android:onClick="onCourseCustomizeClick"
            android:clickable="true"
            android:layout_below="@+id/CCTextView"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="35dp"
            android:elevation="10dp"
            android:background="@drawable/my_border"
            android:paddingLeft="10dp"/>

    </RelativeLayout>
</ScrollView>
