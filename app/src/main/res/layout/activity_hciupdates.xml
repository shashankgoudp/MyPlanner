            android:paddingLeft="10dp"
            >

        </TextView>

        <ImageButton
            android:id="@+id/arrow4"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"
            android:scaleType="fitCenter"
            android:layout_marginTop="327dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="45dp"
            android:background="@android:color/transparent"
            />

        <TextView android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/underlinedText_Moodleid2"
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:id="@+id/MoodleUpdatesid2"
            android:textSize="20dp"
            android:onClick="gotoMoodle"
            android:clickable="true"
            android:layout_below="@+id/MoodleUpdatesid1"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/my_border"
            android:paddingLeft="10dp"
            >

        </TextView>

        <ImageButton
            android:id="@+id/arrow5"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"
            android:scaleType="fitCenter"
            android:layout_marginTop="377dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="45dp"
            android:background="@android:color/transparent"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/underlinedText_CourseWebsiteUpdates"
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:id="@+id/CourseWebsiteUpdates"
            android:textSize="20dp"
            android:onClick="gotoCourseWebsite"
            android:clickable="true"
            android:layout_below="@+id/MoodleUpdatesid2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

        </TextView>

        <TextView android:layout_width="300dp"
